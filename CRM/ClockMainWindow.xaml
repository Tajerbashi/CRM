<UserControl x:Class="CRM.ClockMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="278" FontFamily="IRANSansWeb">
    <Grid>
        <TextBlock x:Name="clockTime" Text="Sample Test" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="15" FontFamily="Consolas" >
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF003EFF"/>
                    <GradientStop Color="#FFC185FF" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</UserControl>
